<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
   >

    <RelativeLayout
        android:id="@+id/sum_rel_center"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@color/page_bg" >

        <View
            android:id="@+id/sum_end_view"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_below="@+id/sum_text_cent"
            android:layout_centerHorizontal="true"
            android:background="@color/line" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/sum_text_cent"
            android:layout_centerHorizontal="true"
            android:background="@color/line" />

        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_above="@+id/sum_text_cent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/round_fill_blue_bg" />

        <ImageView
            android:id="@+id/sum_end_img"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_below="@+id/sum_text_cent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/round_fill_blue_bg" />

        <TextView
            android:id="@+id/sum_text_cent"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/umeng_fb_color_btn_normal"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sum_rel"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@color/page_bg"
        android:visibility="gone" >

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/line" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/zongjie_44" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/sum_lin_left"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/sum_text_left"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ask_msg_patient_bg"
                    android:drawableRight="@drawable/dir_right"
                    android:gravity="center"
                    android:textColor="#666666" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sum_lin_right"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/line" />

                <TextView
                    android:id="@+id/sum_text_rignt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ask_msg_patient_bg"
                    android:drawableRight="@drawable/dir_right"
                    android:gravity="center"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>