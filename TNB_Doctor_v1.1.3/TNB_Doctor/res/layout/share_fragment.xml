<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/popu_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/pop_lin"
        android:background="#a0000000" />
    <LinearLayout
        android:id="@+id/pop_lin"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/cancel"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dip">

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/sinaweibo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/logo_sinaweibo"
            android:gravity="center"
            android:text="新浪微博"
            android:textColor="@color/text_gray" />
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/wechat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/logo_wechat"
            android:gravity="center"
            android:text="微信好友"
            android:textColor="@color/text_gray" />
     <TextView
            android:paddingTop="10dp"
         android:id="@+id/wechitfriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/logo_wechatmoments"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/qzone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/qq"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="QQ"
            android:textColor="@color/text_gray" />

