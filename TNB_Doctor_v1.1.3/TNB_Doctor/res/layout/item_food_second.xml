<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/seletion_default_btn"
    android:padding="10dp" >

    <com.comvee.tnb.widget.RoundImageView
        android:id="@+id/food_image"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/knowledge_ico"
        app:type="circle" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/food_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_heatNweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/food_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#999999"
        android:textSize="15sp" />

    <TextView
        android:background="@drawable/bg_color_cornner_green"
        android:id="@+id/eat_advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:textColor="#66cc66"
        android:textSize="15sp" />

</RelativeLayout>