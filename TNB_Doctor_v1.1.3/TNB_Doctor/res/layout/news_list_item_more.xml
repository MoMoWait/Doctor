<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_img_type_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/type_more_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"

            android:textColor="@color/txt_black"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_more_title"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_more_img1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginRight="7dp"
                android:src="#f0f0f0"
                android:layout_weight="1"
                android:scaleType="centerCrop"
               />

            <ImageView
                android:id="@+id/type_more_img2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:src="#f0f0f0"
                android:layout_marginRight="7dp"
                android:layout_weight="1"

                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/type_more_img3"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:src="#f0f0f0"
                android:layout_weight="1"

                android:scaleType="centerCrop"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/type_more_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/layout"
            android:layout_marginTop="5dp"
            android:background="@drawable/rect_round_graycolor"
            android:paddingBottom="2.5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2.5dp"

            android:textColor="#999999"
            android:textSize="9dp" />

    </RelativeLayout>

    <View

        style="@style/line_horizontal" />
</LinearLayout>