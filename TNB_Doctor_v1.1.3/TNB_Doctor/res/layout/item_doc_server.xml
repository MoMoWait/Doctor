<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_server_head"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="5dip"
        android:scaleType="fitXY"
        android:src="@drawable/img_defualt1" />

    <TextView
        android:id="@+id/tv_server_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:textColor="@color/text_color_3"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_server_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:paddingRight="20dp"
        android:textColor="@color/text_color_3"
        android:textSize="12sp" />
    <ImageView
        android:id="@+id/img_server_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@id/tv_server_money"
        android:src="@drawable/yisheng_36"
        android:visibility="gone"/>
</RelativeLayout>