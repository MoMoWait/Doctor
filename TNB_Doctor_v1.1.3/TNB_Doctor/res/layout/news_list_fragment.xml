<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
        <com.comvee.tnb.ui.xlistview.XListView
            android:id="@+id/new_list_view"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/lin_group_of_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/loadingImageView_of_search"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:minWidth="120dp"
                android:src="@drawable/loading_anim" >
            </ImageView>

            <TextView
                android:id="@+id/tv_of_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/healthknowledge_search_searching"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/update_text"
        android:layout_width="match_parent"
        android:background="#eeffffff"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#000000"
        android:layout_height="35dp" />
</RelativeLayout>