<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.comvee.tnb.widget.RoundImageView
            android:id="@+id/task_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/img_defualt1"
            app:type="circle" />

        <TextView
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="fdfdf"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/task_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_weight="2"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/index_09"
            android:gravity="right"
            android:textColor="@color/txt_green"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/task_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="fdfdf"
        android:textColor="#666666"
        android:textSize="15sp" />

</LinearLayout>