<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/new_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/type_mini_img"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:src="#f0f0f0"
            android:scaleType="centerCrop"
              />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/type_mini_img"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/type_mini_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"

                android:textColor="@color/txt_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/type_mini_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"

                android:textColor="#999999"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/type_mini_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rect_round_graycolor"
            android:paddingBottom="2.5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2.5dp"

            android:textColor="#999999"
            android:textSize="9dp" />
    </RelativeLayout>
    <View
        style="@style/line_horizontal" />
</LinearLayout>