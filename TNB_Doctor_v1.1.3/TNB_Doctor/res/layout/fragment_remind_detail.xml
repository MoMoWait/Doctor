<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backage_color"
    android:orientation="vertical" >

    <com.comvee.tnb.widget.TitleBarView
        android:id="@+id/main_titlebar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btn_to_ask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_doc" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_task_decs"
                    android:drawablePadding="10dip"
                    android:gravity="left|top"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dip"
                    android:paddingRight="5dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="#b1b1b1"
                    android:textSize="16sp" >
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/remind_detail_action"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_content_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_task_dcs1"
                android:drawablePadding="10dip"
                android:gravity="left|top"
                android:lineSpacingMultiplier="1.2"
                android:padding="10dp"
                android:paddingLeft="10dip"
                android:textColor="@color/black"
                android:textColorHint="#b1b1b1"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingTop="10dp"
                android:text="@string/remind_detail_guide_action"
                android:textColor="#d87f00"
                android:textSize="15sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_add_task"
                style="@style/Button_Green"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:shadowColor="#ff000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/remind_detail_take_task" />

            <TextView
                android:id="@+id/tv_task_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/icon_sound_1"
                android:drawablePadding="5dp"
                android:text="@string/remind_detail_advice"
                android:textColor="#d98000"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>