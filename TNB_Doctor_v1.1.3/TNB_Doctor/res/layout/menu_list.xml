<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#30000000" >

    <LinearLayout
        android:layout_width="115dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_fill_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/menu_share"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:background="@drawable/menu_select"
            android:drawableLeft="@drawable/share_article"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/menu_list_share"
            android:textColor="@color/text_color_1"
            android:textSize="15sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/line" />

        <TextView
            android:id="@+id/menu_font_size"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:background="@drawable/menu_select"
            android:drawableLeft="@drawable/share_article"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/menu_list_fontsize_small"
            android:textColor="@color/text_color_1"
            android:textSize="15sp" />

        <View
            android:id="@+id/menu_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="@color/line" />

        <TextView
            android:id="@+id/menu_collect"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:background="@drawable/menu_select"
            android:drawableLeft="@drawable/share_article"
            android:drawablePadding="10dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/menu_list_collection"
            android:textColor="@color/text_color_1"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:layout_marginTop="3dip"
        android:src="@drawable/tanchuang_043" />

</RelativeLayout>