<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#F6F6F6"
    android:orientation="vertical" >

    <com.comvee.tnb.widget.TitleBarView
        android:id="@+id/main_titlebar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_get_red_packet" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_get_red_packet_transparent10"
            android:orientation="vertical"
            android:paddingBottom="27dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:text="@string/import_phone"
                android:textColor="#fb8d68"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/edt_enter_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/bg_dialog_white_c"
                android:hint="@string/hint_enter_phone"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingBottom="12dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#cccccc"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/bg_dialog_white_c"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edt_verificate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_enter_verificate"
                    android:paddingBottom="12dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:paddingTop="12dp"
                    android:textColor="#333333"
                    android:singleLine="true"
                    android:background="@drawable/textview_white_corner5"
                    android:maxLength="6"
                    android:textColorHint="#cccccc"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/selector_six2five_corner5"
                    android:paddingBottom="7dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="7dp"
                    android:text="@string/get_verify_code"
                    android:textColor="@color/page_bg"
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel_get_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/bg_color_cornner_solid_yellow" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/state_pressed_trans70"
                    android:gravity="center_horizontal"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="马上领取"
                    android:textColor="@color/page_bg"
                    android:textSize="17sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
