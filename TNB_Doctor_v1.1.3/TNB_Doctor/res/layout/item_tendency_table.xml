<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/record_modify"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.96"
            android:gravity="center"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp"
            android:textColor="@color/theme_color_green" />

        <View
            style="@style/line_vertical"
            android:background="@color/record_line" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp"
            android:text="@string/item_tendency_morning"
            android:textColor="#00ffffff" />

        <View
            style="@style/line_vertical"
            android:background="@color/record_line" />

        <TextView
            android:id="@+id/tv_value_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp"
            android:text="@string/item_tendency_fasting"
            android:textColor="#00ffffff" />

        <View
            style="@style/line_vertical"
            android:background="@color/record_line" />

        <TextView
            android:id="@+id/tv_value_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp"
            android:text="@string/item_tendency_after"
            android:textColor="#00ffffff" />

        <View
            style="@style/line_vertical"
            android:background="@color/record_line" />

        <TextView
            android:id="@+id/tv_value_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp"
            android:text="@string/item_tendency_before"
            android:textColor="#00ffffff" />

        <View
            style="@style/line_vertical"
            android:background="@color/record_line" />

        <TextView
            android:id="@+id/tv_value_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/item_tendency_after"
            android:textColor="#00ffffff" />

        <View
            style="@style/line_vertical"
            android:background="@color/record_line" />

        <TextView
            android:id="@+id/tv_value_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp"
            android:text="@string/item_tendency_before"
            android:textColor="#00ffffff" />

        <View
            style="@style/line_vertical"
            android:background="@color/record_line" />

        <TextView
            android:id="@+id/tv_value_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp"
            android:text="@string/item_tendency_after"
            android:textColor="#00ffffff" />

        <View
            style="@style/line_vertical"
            android:background="@color/record_line" />

        <TextView
            android:id="@+id/tv_value_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="2.5dp"
            android:paddingTop="2.5dp"
            android:text="@string/item_tendency_sleep_before"
            android:textColor="#00ffffff" />
    </LinearLayout>

    <View
        android:id="@+id/record_line_short"

        style="@style/line_horizontal"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/record_line" />

    <View
        android:id="@+id/record_line_long"
        style="@style/line_horizontal"
        android:background="@color/record_line_2"
        android:visibility="gone" />

</LinearLayout>