<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backage_color"
    android:orientation="vertical" >

    <com.comvee.tnb.widget.TitleBarView
        android:id="@+id/main_titlebar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="常吃食物"
                android:textColor="@color/text_color_2"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_color_white"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/original_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:drawableTop="@drawable/yshi_01"
                    android:gravity="center"
                    android:hint="请选择食物"
                    android:textColor="@color/text_color_1"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp" />

                <View
                    style="@style/line_vertical"

                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/original_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:drawableTop="@drawable/yshi_03"
                    android:gravity="center"
                    android:hint="请选择分量"
                    android:textColor="@color/text_color_1"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp" />

                <View
                    style="@style/line_vertical"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    />

                <TextView
                    android:id="@+id/original_cal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:drawableTop="@drawable/yshi_05"
                    android:gravity="center"
                    android:text="-- kcal"
                    android:textColor="@color/text_color_2"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="替换食物"
                android:textColor="@color/text_color_2"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_color_white"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/new_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:drawableTop="@drawable/yshi_01"
                    android:gravity="center"
                    android:hint="请选择食物"
                    android:textColor="@color/text_color_1"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp" />

                <View
                    style="@style/line_vertical"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    />

                <TextView
                    android:id="@+id/new_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:drawableTop="@drawable/yshi_03"
                    android:gravity="center"
                    android:hint="请选择分量"
                    android:textColor="@color/text_color_1"
                    android:textColorHint="#cccccc"
                    android:textSize="15sp" />

                <View
                    style="@style/line_vertical"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                     />

                <TextView
                    android:id="@+id/new_cal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:drawableTop="@drawable/yshi_05"
                    android:gravity="center"
                    android:text="- - kcal"
                    android:textColor="@color/text_color_2"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="18sp"
                android:text="友情提示：最好在同类食物中交换哦，即谷薯类换谷薯，蔬菜类换蔬菜。"
                android:textColor="@color/text_color_3"
                android:textSize="14sp" />

            <Button
                android:id="@+id/confirm"
                style="@style/Button_blue1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/ok" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>