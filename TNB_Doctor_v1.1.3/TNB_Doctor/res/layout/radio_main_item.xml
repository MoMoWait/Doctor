<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="10dp" >

    <View
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_gray_bg" />

    <TextView
        android:id="@+id/tv_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:drawableLeft="@drawable/radio_icon_0"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:textColor="@color/txt_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/top_bar"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/right_dir"
        android:padding="10dp"
        android:text="更多"
        android:textColor="@color/text_color_3"
        android:textSize="14.5sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_group"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_photo1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_photo1"
                android:layout_alignLeft="@id/iv_photo1"
                android:layout_alignRight="@id/iv_photo1"
                android:background="#99000000"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_photo1"
                android:layout_alignRight="@id/iv_photo1"
                android:layout_below="@id/iv_photo1"
                android:lines="2"
                android:paddingTop="4dp"
                android:textColor="@color/txt_black"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_photo2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_photo2"
                android:layout_alignLeft="@id/iv_photo2"
                android:layout_alignRight="@id/iv_photo2"
                android:background="#99000000"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_photo2"
                android:layout_alignRight="@id/iv_photo2"
                android:layout_below="@id/iv_photo2"
                android:lines="2"
                android:paddingTop="4dp"
                android:textColor="@color/txt_black"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_photo3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_photo3"
                android:layout_alignLeft="@id/iv_photo3"
                android:layout_alignRight="@id/iv_photo3"
                android:background="#99000000"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_photo3"
                android:layout_alignRight="@id/iv_photo3"
                android:layout_below="@id/iv_photo3"
                android:lines="2"
                android:paddingTop="4dp"
                android:textColor="@color/txt_black"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>