<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#2bd37e" >

    <ImageView
        android:id="@+id/iv_luancher_bg"
        android:layout_width="@dimen/luancher_width"
        android:layout_height="@dimen/luancher_width"
        android:layout_marginTop="30dip"
        android:src="@drawable/yindao_3" />

   <TextView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="@color/white"
       android:text="@string/luancher_text_5"
       android:layout_marginTop="25dip"
       android:gravity="center_horizontal"
       android:textSize="32dip"/>
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="@color/white"
       android:layout_marginTop="4dip"
       android:text="@string/luancher_text_6"
       android:gravity="center_horizontal"
       android:textSize="18dip"/>
</LinearLayout>