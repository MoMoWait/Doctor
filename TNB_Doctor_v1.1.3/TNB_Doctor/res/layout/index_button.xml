<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/btn_sugar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/seletion_default_btn"
        android:drawableTop="@drawable/index_sugar"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="@string/index_button_sugar_history"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btn_healthknowledge"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/seletion_default_btn"
        android:drawableTop="@drawable/index_class"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="@string/index_button_health_knoweledge"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btn_plan"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/seletion_default_btn"
        android:drawableTop="@drawable/ysjl_01"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="@string/index_button_diet_recod"
        android:textColor="#333333"
        android:textSize="14sp" />

    <!--
         <TextView
        android:id="@+id/btn_message"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/seletion_default_btn"
        android:drawableTop="@drawable/index_message"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="消息中心"
        android:textColor="#333333"
        android:textSize="14sp" />
    -->

    <TextView
        android:id="@+id/btn_privator"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/seletion_default_btn"
        android:drawableTop="@drawable/index_privator"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="@string/index_button_doctor_consultant"
        android:textColor="#333333"
        android:textSize="14sp" />

</LinearLayout>