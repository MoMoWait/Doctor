<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backage_color"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.comvee.tnb.widget.TitleBarView
            android:id="@+id/main_titlebar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/food_exchange_label_1"
            android:textColor="@color/text_color_2"
            android:textSize="16sp" />

        <View style="@style/patient_item_sprite_line" />

        <LinearLayout
            android:id="@+id/lin_select_name"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/seletion_default_btn"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/food_exchange_name"
                android:textColor="@color/text_color_1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_food_select_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dip"
                android:drawableRight="@drawable/left_frag_dir"
                android:gravity="right|center_vertical"
                android:hint="@string/food_exchange_name_hint"
                android:paddingRight="10dip"
                android:textColor="@color/text_color_2"
                android:textColorHint="@color/line"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/patient_item_sprite_line" />

        <LinearLayout
            android:id="@+id/lin_select_weight"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/seletion_default_btn"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/food_exchange_weight"
                android:textColor="@color/text_color_1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_food_select_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dip"
                android:drawableRight="@drawable/left_frag_dir"
                android:gravity="right|center_vertical"
                android:hint="@string/food_exchange_weight_hint"
                android:paddingRight="10dip"
                android:textColor="@color/text_color_2"
                android:textColorHint="@color/line"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/patient_item_sprite_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/seletion_default_btn"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/food_exchange_heat"
                android:textColor="@color/text_color_1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_food_select_heat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:hint="@string/food_exchange_heat_hint"
                android:paddingRight="10dip"
                android:textColor="@color/text_color_2"
                android:textColorHint="@color/text_color_2"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/patient_item_sprite_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/food_exchange_label_2"
            android:textColor="@color/text_color_2"
            android:textSize="16sp" />

        <View style="@style/patient_item_sprite_line" />

        <LinearLayout
            android:id="@+id/lin_exchange_name"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/seletion_default_btn"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/food_exchange_name"
                android:textColor="@color/text_color_1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_food_exchange_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dip"
                android:drawableRight="@drawable/left_frag_dir"
                android:gravity="right|center_vertical"
                android:hint="@string/food_exchange_name_hint"
                android:paddingRight="10dip"
                android:textColor="@color/text_color_2"
                android:textColorHint="@color/line"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/patient_item_sprite_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/seletion_default_btn"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/food_exchange_weight"
                android:textColor="@color/text_color_1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_food_exchange_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:hint="@string/food_exchange_weight_unit_hint"
                android:paddingRight="10dip"
                android:textColor="@color/text_color_2"
                android:textColorHint="@color/text_color_2"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/patient_item_sprite_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/seletion_default_btn"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/food_exchange_heat"
                android:textColor="@color/text_color_1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_food_exchange_heat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:hint="@string/food_exchange_heat_hint"
                android:paddingRight="10dip"
                android:textColor="@color/text_color_2"
                android:textColorHint="@color/text_color_2"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/patient_item_sprite_line" />

        <com.comvee.tnb.widget.JustifyTextView
            android:id="@+id/tv_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="15dip"
            android:gravity="center_vertical"
            android:text="@string/food_exchange_prompt"
            android:textColor="@color/text_color_3"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/Button_Green"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/ok"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_delete"
            style="@style/Button_Red1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:text="@string/delete"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>