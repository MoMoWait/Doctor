<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loader_more"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/seletion_default_btn"
    android:visibility="gone" >

    <TextView
        android:id="@+id/tv_load"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/loader_more_comment"
        android:textColor="@color/text_color_2"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/myProgressBarStyle"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_load"
        android:indeterminateDuration="700"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_load"
        android:src="@drawable/loader_more" />

    <View
        style="@style/patient_item_sprite_line"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp" />

    <View
        style="@style/patient_item_sprite_line"
        android:layout_below="@+id/tv_load" />

</RelativeLayout>