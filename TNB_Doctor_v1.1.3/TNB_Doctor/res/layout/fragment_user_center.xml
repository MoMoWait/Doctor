<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.comvee.tnb.widget.TitleBarView
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </RelativeLayout>

        <TextView
            style="@style/text_default"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/dir_right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/user_info" />

        <TextView
            style="@style/text_default"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_white_up"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/dir_right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/menu_rec" />

        <TextView
            style="@style/text_default"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_white_center"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/dir_right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/menu_test" />

        <TextView
            style="@style/text_default"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_white_buttom"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/dir_right"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/menu_info" />
    </LinearLayout>

</RelativeLayout>