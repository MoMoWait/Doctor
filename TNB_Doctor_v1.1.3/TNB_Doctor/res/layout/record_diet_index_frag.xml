<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.comvee.tnb.widget.TitleBarView
        android:id="@+id/main_titlebar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:drawingCacheQuality="low"
        android:weightSum="638" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="354"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/food_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/yshi_79" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="284"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/record_index_foot_rep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/yshi_81" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff" />

            <ImageView
                android:id="@+id/record_index_swap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/yshi_83" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@color/backage_color"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="@string/record_diet_today_food"
        android:textColor="@color/text_color_1"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/text_and_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/record_diet_morning"
                android:textColor="@color/txt_green"
                android:textSize="16sp" />

            <View
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/txt_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/record_diet_noon"
                android:textColor="#333333"
                android:textSize="16sp" />

            <View
              android:layout_width="70dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/txt_green"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/record_diet_night"
                android:textColor="#333333"
                android:textSize="16sp" />

            <View
                 android:layout_width="70dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/txt_green"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <com.comvee.tnb.ui.record.diet.InnerViewpager
        android:id="@+id/vp_diet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >
    </com.comvee.tnb.ui.record.diet.InnerViewpager>

</LinearLayout>