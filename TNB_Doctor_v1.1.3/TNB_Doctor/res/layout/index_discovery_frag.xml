<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical" >

    <com.comvee.tnb.widget.TitleBarView
        android:id="@+id/main_titlebar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp" >

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_discovery_health_task"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/seletion_default_btn"
            android:drawableTop="@drawable/discovery_health_task"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/index_discovery_health_task"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            style="@style/line_vertical"
            android:layout_height="80dip"
             />

        <TextView
            android:id="@+id/btn_discovery_food_benefit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/seletion_default_btn"
            android:drawableTop="@drawable/xinzf_09"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/index_discovery_food_rep"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/patient_item_sprite_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_discovery_sugar_rise"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/seletion_default_btn"
            android:drawableTop="@drawable/discovery_rise_num"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/index_discovery_L_sugar_index"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
      style="@style/line_vertical"
            android:layout_height="80dip"
             />

        <TextView
            android:id="@+id/btn_discovery_hot_cal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/seletion_default_btn"
            android:drawableTop="@drawable/discovery_hot_cal"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/index_discovery_calcory_calc"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            style="@style/line_vertical"
            android:layout_height="80dip"
            />

        <TextView
            android:id="@+id/btn_discovery_wait"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/seletion_default_btn"
            android:drawableTop="@drawable/jqqd"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/index_discovery_Stay_tuned"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <View
      style="@style/patient_item_sprite_line" />

</LinearLayout>