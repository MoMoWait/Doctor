<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_qestion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:gravity="top|left"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_qestion_decs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:textColor="#999999"
        android:textSize="14sp" />

    
    <RelativeLayout
        android:id="@+id/btn_set_value"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_white_center" >

        <View 
       style="@style/patient_item_sprite_line" 
        android:layout_alignParentTop="true"
        />
        <!--
             <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical"
            android:text="测量日期"
            android:textColor="@color/black"
            android:textSize="20sp" />
        -->

        <EditText
            android:id="@+id/tv_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:hint="@string/item_question_input_content"
            android:paddingLeft="10dp"
            android:textColor="@color/theme_color_green"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_qestion_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="14dp"
        android:ellipsize="end"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_defualt"
        android:textSize="13sp"  />

</LinearLayout>